{
  "author": "Ian McBurnie <ianmcburnie@hotmail.com>",
  "scripts": {
    "start": "npm run build && parallelshell 'npm run browser-sync' 'npm run nodemon' 'npm run onchange'",
    "build": "npm run transpile && npm run lasso && npm run jekyll",
    "jekyll": "bundler exec jekyll build --incremental --config _config.yml,_config.localhost.yml",
    "browser-sync": "browser-sync start -s --ss _site --index _site/index.html --files '_site'",
    "lasso": "lasso browser.json --output-dir static --minify && rimraf build",
    "clean": "rimraf _babel _site .cache .sass-cache build static/browser.js.*",
    "nodemon": "nodemon --exec 'npm run lasso && npm run jekyll' -e html,css,scss,js --ignore 'static' --ignore '_site'",
    "prepublishOnly": "npm run build",
    "prep": "npm run prepublishOnly",
    "transpile": "babel _js --out-dir _babel",
    "onchange": "onchange _js -- npm run transpile"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ebay/mindpatterns"
  },
  "devDependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7",
    "@babel/preset-env": "^7",
    "babel-plugin-transform-object-assign": "^6",
    "browser-sync": "^2",
    "core-js-pure": "^3",
    "custom-event-polyfill": "^1",
    "details-element-polyfill": "^2",
    "lasso-cli": "^2",
    "makeup-active-descendant": "~0.2.1",
    "makeup-expander": "~0.8.0",
    "makeup-focusables": "^0.0.4",
    "makeup-key-emitter": "~0.1.0",
    "makeup-modal": "~0.1.0",
    "makeup-next-id": "~0.1.1",
    "makeup-prevent-scroll-keys": "~0.0.3",
    "makeup-roving-tabindex": "~0.2.3",
    "nodelist-foreach-polyfill": "^1",
    "nodemon": "^1",
    "onchange": "^6",
    "parallelshell": "^3",
    "rimraf": "^2"
  }
}
